server:
  disable: true
#  http_listen_port: 9080
#  grpc_listen_port: 0

positions:
  filename: /var/log/loki/positions.yaml

client:
  url: http://syslog.{{ domainname }}:3100/loki/api/v1/push

scrape_configs:
 - job_name: nginx
   pipeline_stages:
   static_configs:
   - labels:
      job: nginx
      host: {{ inventory_hostname }}
      __path__: /var/log/nginx/*.log
 - job_name: apache
   pipeline_stages:
   static_configs:
   - labels:
      job: apache
      host: {{ inventory_hostname }}
      __path__: /var/log/apache2/*.log
